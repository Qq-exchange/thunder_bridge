{
  "name": "bridge-nodejs",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --ext .js,.ts ./src",
    "watcher:signature-request": "./scripts/start-worker.sh watcher.main signature-request-watcher",
    "watcher:collected-signatures": "./scripts/start-worker.sh watcher.main collected-signatures-watcher",
    "watcher:affirmation-request": "./scripts/start-worker.sh watcher.main affirmation-request-watcher",
    "sender:home": "./scripts/start-worker.sh sender.main home-sender",
    "sender:foreign": "./scripts/start-worker.sh sender.main foreign-sender",
    "dev": "concurrently -n 'watcher:signature-request,watcher:collected-signatures,watcher:affirmation-request,sender:home,sender:foreign' -c 'red,green,yellow,blue,magenta' 'npm run watcher:signature-request' 'npm run watcher:collected-signatures' 'npm run watcher:affirmation-request' 'npm run sender:home' 'npm run sender:foreign'",
    "test": "NODE_ENV=test mocha test/*",
    "test:ts": "NODE_ENV=test mocha -r ts-node/register src/lib/test/*",
    "test:watch": "NODE_ENV=test mocha --watch --reporter=min",
    "dev-chain": "docker run -d -p 7545:8545 --name dev-chain trufflesuite/ganache-cli:latest -m 'wisdom zero output drift choice bright east stuff craft inform invest patient' --callGasLimit 10000000000000 -l 10000000000000 -g 10000000000000000 -e 10000000000000 -i 5777",
    "dev-chain:stop": "docker rm -f dev-chain",
    "truffle-test": "tsc && cp -r ./truffle-test ./built && NODE_ENV=test truffle test built/truffle-test/*.test.js --network develop",
    "truffle-test:pala": "tsc && cp -r ./truffle-test ./data ./built && NODE_ENV=test truffle test built/truffle-test/*.test.js --network pala_single",
    "truffle:compile": "truffle compile",
    "tsc": "tsc",
    "coverage": "NODE_ENV=test nyc --reporter=text --reporter=html mocha",
    "postinstall": "npm install --prefix e2e && mkdir -p logs",
    "docker-message": "echo 'Please run a valid npm command'",
    "sendFromForeignToHome": "node scripts/erc20_to_erc20/sendFromForeignToHome.js",
    "sendFromHomeToForeign": "node scripts/erc20_to_erc20/sendFromHomeToForeign.js",
    "resetLastBlock": "node scripts/resetLastBlock.js",
    "resetNonce": "node scripts/resetNonce.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "-": "0.0.1",
    "@types/amqp-connection-manager": "^2.0.10",
    "@types/amqplib": "^0.5.13",
    "@types/ioredis": "^4.16.0",
    "@types/node": "^13.13.4",
    "@types/promise-retry": "^1.1.3",
    "@types/redlock": "^4.0.1",
    "amqp-connection-manager": "^2.0.0",
    "amqplib": "^0.5.2",
    "aws-sdk": "^2.480.0",
    "bignumber.js": "^7.2.1",
    "dotenv": "^5.0.1",
    "envalid": "^6.0.1",
    "http-list-provider": "0.0.5",
    "ioredis": "^3.2.2",
    "lodash": "^4.17.10",
    "node-fetch": "^2.1.2",
    "pino": "^6.2.1",
    "pino-pretty": "^2.0.1",
    "promise-limit": "^2.7.0",
    "promise-retry": "^1.1.1",
    "redlock": "^3.1.2",
    "ts-retry-promise": "^0.3.1",
    "typescript": "^3.8.3",
    "web3": "^1.2.6",
    "web3-utils": "1.2.6"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/sinon": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "bn-chai": "^1.0.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "concurrently": "^3.6.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^3.1.3",
    "ganache-cli": "^6.9.1",
    "mocha": "^5.2.0",
    "ndjson": "^1.5.0",
    "nyc": "^12.0.2",
    "openzeppelin-solidity": "^1.10.0",
    "prettier": "^2.0.5",
    "proxyquire": "^2.0.1",
    "simple-statistics": "^6.1.0",
    "sinon": "^6.1.0",
    "truffle": "^5.1.24",
    "@truffle/hdwallet-provider": "^1.0.35",
    "ts-node": "^8.9.1"
  },
  "engines": {
    "node": ">= 8.9"
  }
